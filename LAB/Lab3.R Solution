table(x$relevance)

#5
k = 0
sum = 0
flr <- function(f) {t = f - f %% 0.01; t}
repeat{
  x1 = 4 * ((-1)^k)/(2*k + 1)
  sum = sum + x1
  cat("current values ",k, sum, "\n")
  if(flr(sum) == 3.14){
    break
  }else{
    k = k + 1
  }
}















