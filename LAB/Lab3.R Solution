#2
distinct_relevance<-function(vec= x$relevance) {
  un<-c()
  for (i in 1:length(vec)) {
    if (vec[i] %in% un) {
      next
    } else {
      un<-append(un,vec[i])
    }
  }
return(length(un))

}

len<- distinct_relevance(x$relevance)
print(len)

#3
count=function(vect,value){
  counter=0
  for(i in 1: length(vect)){
    if(vect[i]==value){
      counter=counter+1
    }
  }
  counter
}
count(x$relevance, 15)

